<Page x:Class="Practos3.Country2E"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practos3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Country2E">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="CountryGrd" SelectedCellsChanged="CountryGrd_SelectedCellsChanged"/>
        <UniformGrid Grid.Row="1" Rows="1">
            
            <TextBox x:Name="tbCountryName" >Название страны</TextBox>
            
        </UniformGrid>
        <UniformGrid Grid.Row="2" Rows="1">
            <Button x:Name="btnAdd" Click="btnAdd_Click">Добавить</Button>
            <Button x:Name="btnDelete" Click="btnDelete_Click">Удалить</Button>
            <Button x:Name="btnUpdate" Click="btnUpdate_Click">Изменить</Button>
        </UniformGrid>
    </Grid>
</Page>
